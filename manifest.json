{
  "manifest_version": 2,
  "name": "FactCheck",
  "description": "Helps finding and getting rid of conflicting data in the Web",
  "version": "0.1",

  "background": {
    "persistent": false,
    "scripts": ["background.js", "js/jquery-1.10.2.min.js"]
  },
  "page_action": {
    "default_icon": "pf-icon.png",
    "default_title": "FactCheck",
    "css": ["style.css", "css/bootstrap.min.css"],
    "default_popup": "popup.html"
  },
  "permissions" : [
    "tabs", "http://*/*", "https://*/*", "storage"
  ],
  "content_scripts": [
    {
      "matches": ["file:///*/*", "http://*/*", "https://*/*"],
//      "css": ["style.css", "normalize.css"],
      "js": ["js/jquery-1.10.2.min.js", "js/jquery-ui-1.10.3.custom.min.js", "js/jquery.microdata.js", "content.js"]
    }
  ],
  "web_accessible_resources": [
    "js/jquery-1.10.2.min.map"
  ],
  "options_page": "options.html"
}
